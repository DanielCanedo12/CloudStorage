@model FrequenciaOnline.MVC.Secure.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/forms")
    @Styles.Render("~/Content/Pages/login")
}
@section Scripts {
    @Scripts.Render("~/Scripts/forms")
    @Scripts.Render("~/Scripts/simpleWeather")
    @Scripts.Render("~/Scripts/jquery-ui")
    @Scripts.Render("~/Scripts/Pages/login")
}

<div class="block-center wd-xl">
    <div id="panel">
        <div class="text-center" id="logo">
            <h1 class="logoImg">
                Neo Escola
            </h1>
            @*
            <div class="fo" id="foBlue"></div>
            <div class="fo" id="foRed"></div>
            <div class="fo" id="foYellow"></div>
            <div class="fo" id="foGreen"></div>
            *@
        </div>

        <div class="panel panel-body" id="subPanel">
            <a style="position: absolute; z-index:5; display: none" class="fa fa-arrow-left link-unstyled" id="aBack"></a>

            <div class="item user-block cursor-normal text-center">
                <img class="img-thumbnail thumb80 img-circle" alt="" src="/Content/Images/img_pessoa.png" id="imgFoto" />
            </div>

            <div id="ScrollLogin">
                <div style="width:667px">
                    <form id="frmLogin" action="@Url.Action("Email", "Login")" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.User, new { @class = "form-control", placeholder = "E-mail" , id = "iptEmail" })
                            <span class="fa fa-envelope form-control-feedback text-muted"></span>
                        </div>
                        <button class="btn btn-primary right wd-wide" type="submit">Próximo</button>
                    </form>

                    <form method="post" id="frmSenha">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.User, new { @id = "ihdUser" })

                        <div class="user-block-info text-center" style="margin-bottom:10px">
                            <span class="user-block-name" id="Name"></span>
                        </div>

                        <div class="form-group has-feedback">
                            @Html.PasswordFor(model => model.Pass, new { @class = "form-control", placeholder = "Senha" })
                            <span class="fa fa-lock form-control-feedback text-muted"></span>
                        </div>

                        <button class="btn btn-primary right wd-wide" type="submit">Entrar</button>

                        <div class="forgot-remember">
                            <a class="text-muted f-password pull-right" id="lnkEsqueceuSenha"href="#" data-toggle="modal" data-target="#recuperaSenha">Esqueceu a senha?</a>
                            <div class="checkbox c-checkbox pull-left mt0">
                                <label>
                                    <input name="Remember" id="ichRemember" type="checkbox" value="true" />
                                    <span class="fa fa-check"></span>Manter logado
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Shared/Modals/RecuperaSenha.cshtml")
